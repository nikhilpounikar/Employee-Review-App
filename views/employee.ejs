<link rel="stylesheet" href="/css/admin.css">

<h5 class="text-center mt-3">All Employees List</h5>

<div class="container mt-4">

    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Admin</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
          </tr>
        </thead>
        <tbody>
          <% let i=0%>
          <% for(let employee of employeList) {%>
            <tr>
              <th scope="row"><%= i++ %></th>
              <td> <%= employee.name%> </td>
              <td> <%= employee.email%> </td>
              <td> <%= employee.password%> </td>
            
              <% if(!employee.isAdmin) {%>
                <td> 
                  <a href="/admin/make-admin/<%= employee._id %>" class="btn btn-md">Make</a>
              </td>
              <%}else{%>
                <td>
                  <a href="#" class="btn btn-md btn-disabled">Yes</a>
                </td>
              <%}%> 

              <% if(locals.user.id != employee._id) {%>
                <td> 
                  <a href="/admin/deleteEmployee/<%= employee._id %>" class="btn btn-md">Delete</a>
              </td>
              <%}else{%>
                <td>
                  <a href="" class="btn btn-md btn-disabled">Delete</a>
                </td>
              <%}%> 
              <td> 
                <a href="/admin/employee/update/<%= employee._id %>" class="btn btn-md">Update</a>
            </tr>  
          <%}%>
          
        </tbody>
      </table>
</div>